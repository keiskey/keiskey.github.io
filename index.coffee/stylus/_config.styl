//
// グローバル変数
//
// デバッグモードフラグ
$DEBUG = true

$PAGE_WIDTH = 980px
$PAGE_PADDING = 40px  // psdでは特に指定のない左右のゆとり

$COLOR_BLUE = #484e9b

$Z_INDEX = 100  // 共通部分（ヘッダーやモーダルなど）は、z-index値を3桁以上で指定する。

//
// Functions
//
// image-sizeを使うときの画像パス
image-path(src)
	"../../public/img/" + src
	// ex. image-size(image-path(../img/logo.png))[0] -> width

//
// Mixins
//
// 画像置換用
icon()
	display inline-block
	text-indent 105%
	white-space nowrap
	overflow hidden

// ボタン共通
button()
	icon()
	cursor pointer

// ページ幅設定
layout()
	box-sizing border-box
	width $PAGE_WIDTH
	margin 0 auto

// web font
webfont(name = "Ek Mukta", weight = 700)
	font-family name, sans-serif
	font-weight weight
	// weight
	// 400: Normal（MOREリンク）
	// 500: Medium
	// 600: Semi-Bold
	// 700: Bold（ラベル）
	// 800: Extra-Bold

// テキストラベル（青）
label(bg = $COLOR_BLUE, txt = #fff)
	// display inline-block
	// padding 3px 6px 0
	display inline
	padding 3px 6px 2px
	// ↑ヒラギノとメイリオで折り合いが付くように調整。
	background-color bg
	color txt
	font-size 10px
	font-weight bold
	line-height 1.3
	// webfont()

// アイコン付加
parts(src, inset = after, m = 5px)
	dir = inset is after ? left : right
	&:{inset}
		content ""
		display inline-block
		sprite(src)
		margin-{dir} m
