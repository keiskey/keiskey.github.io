@import "nib"
@import "_config"

global-reset()
reset-html5()

body
	background #fff
	color #000
	font-family "Noto Sans CJK JP", sans-serif  // IEはカンマ区切りのみ対応
	line-height 1.5
	-webkit-text-size-adjust none
	// font-smoothing antialiased  // デフォルトは、subpixel-antialiased
	-moz-osx-font-smoothing grayscale
	text-rendering optimizeLegibility
  min-width 100vw
  min-height 100vh

em
	font-weight bold

a
	color #009
	text-decoration none
	&:hover
		text-decoration underline

button
	reset-box-model()
	reset-font()
	background: transparent;
	-webkit-appearance: none;  // 追加
