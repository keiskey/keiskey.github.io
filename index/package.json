{
  "name": "index",
  "config": {
    "key": "value"
  },
  "scripts": {
    "echo": "echo $npm_package_config_key, $npm_package_name",
    "jade": "jade -wPO jade/config.json -o . jade/*.jade",
    "stylus": "stylus -w -u nib -o css/ stylus/",
    "coffee": "coffee -wo js/ coffee/",
    "build": "npm run jade & npm run stylus & npm run coffee",
    "watch": "livereloadx > /dev/null",
    "server": "livereloadx -s",
    "start": "npm run build & npm run watch",
    "install": "npm link coffee-script jade markdown stylus livereloadx"
  },
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "jade": "^1.11.0",
    "livereloadx": "^0.3.9",
    "markdown": "^0.5.0",
    "nib": "^1.1.0",
    "stylus": "^0.53.0"
  }
}
